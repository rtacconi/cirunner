<h1>Listing projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Repository url</th>
      <th>Repository type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project %></td>
      <td><%= link_to project.repository_url, project.repository_url, target: '_blank' %></td>
      <td><%= project.repository_type %></td>
      <td>
        <%= simple_form_for project, url: project_runs_path(project), method: 'post' do |f| %>
          <%= f.submit 'Run project', class: 'btn' %>
        <% end %>
        <%= link_to 'Runs', project_runs_path(project), class: 'btn' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Project', new_project_path, class: 'btn' %>
